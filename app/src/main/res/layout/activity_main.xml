<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.MainActivity">
    <EditText
            android:id="@+id/etIngredients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Ingredients"
            android:ems="10"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:id="@+id/etDishName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="DishName"
            android:ems="10"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/etIngredients"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="198dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etDishName" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/recyclerView"/>
    <Button
            android:text="Button"
            android:layout_width="108dp"
            android:layout_height="47dp"
            android:id="@+id/btnResults" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="116dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.028"/>
</android.support.constraint.ConstraintLayout>